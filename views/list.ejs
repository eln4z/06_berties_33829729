<!DOCTYPE html>
<html>

<head>
    <title>Bertie's Book Shop</title>
    <link rel="stylesheet" href="/main.css">
</head>

<body>
    <h1>
        <%= shopData.shopName %> - Book List
    </h1>

    <h2>Available Books</h2>

    <table border="1" cellpadding="10">
        <tr>
            <th>Book Name</th>
            <th>Price (Â£)</th>
        </tr>

        <% availableBooks.forEach(function(book) { %>
            <tr>
                <td>
                    <%= book.name %>
                </td>
                <td>
                    <%= book.price %>
                </td>
            </tr>
            <% }); %>
    </table>

</body>

</html>